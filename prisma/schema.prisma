// Prisma schema for iFlow Proxy
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // App-specific relations
  iflowAccounts IflowAccount[]
  proxyApiKeys  ProxyApiKey[]
  usageLogs     UsageLog[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// iFlow Account - stores OAuth credentials for iFlow
model IflowAccount {
  id     String @id @default(cuid())
  userId String
  name   String // Display name: "Personal", "Work", etc.

  // Encrypted credentials (AES-256 encrypted)
  accessToken  String @db.Text
  refreshToken String @db.Text
  apiKey       String @db.Text // iFlow API key (from getUserInfo)
  expiresAt    DateTime

  // Account info
  email    String? // iFlow account email/phone
  isActive Boolean @default(true)

  // Usage tracking
  lastUsedAt   DateTime?
  requestCount Int       @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  usageLogs UsageLog[]

  @@index([userId])
  @@index([userId, isActive])
}

// Proxy API Key - generated keys for accessing the proxy
model ProxyApiKey {
  id     String @id @default(cuid())
  userId String

  keyHash      String  @unique // SHA-256 hash for lookup
  keyPreview   String  // First 12 chars for display: "ifp_xxxx..."
  encryptedKey String? @db.Text // AES encrypted full key (for reveal)
  name         String  // e.g., "MacBook Pro", "Work PC"

  isActive   Boolean   @default(true)
  lastUsedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  usageLogs UsageLog[]

  @@index([keyHash])
  @@index([userId])
}

// Usage Log - tracks API usage
model UsageLog {
  id             String  @id @default(cuid())
  userId         String
  iflowAccountId String?
  proxyApiKeyId  String?

  model        String
  inputTokens  Int @default(0)
  outputTokens Int @default(0)

  // Request metadata
  statusCode Int?
  duration   Int? // milliseconds

  createdAt DateTime @default(now())

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  iflowAccount IflowAccount? @relation(fields: [iflowAccountId], references: [id], onDelete: SetNull)
  proxyApiKey  ProxyApiKey?  @relation(fields: [proxyApiKeyId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([iflowAccountId])
  @@index([createdAt])
}
