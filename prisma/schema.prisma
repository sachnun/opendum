// Prisma schema for Opendum
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // App-specific relations
  providerAccounts ProviderAccount[]
  proxyApiKeys     ProxyApiKey[]
  usageLogs        UsageLog[]
  disabledModels   DisabledModel[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Provider Account - stores OAuth credentials for AI providers (Iflow, Antigravity)
model ProviderAccount {
  id       String @id @default(cuid())
  userId   String
  provider String // "iflow" | "antigravity" | "qwen_code" | "gemini_cli" | "codex" | "copilot" | "kiro" | "nvidia_nim" | "ollama_cloud" | "openrouter"
  name     String // Display name: "Personal", "Work", etc.

  // Encrypted credentials (AES-256 encrypted)
  accessToken  String @db.Text
  refreshToken String @db.Text
  expiresAt    DateTime

  // Provider-specific fields
  apiKey    String? @db.Text // Iflow only: API key from getUserInfo
  projectId String?          // Antigravity only: GCP project ID
  tier      String?          // Antigravity only: "free" | "paid"
  accountId String?          // Codex only: ChatGPT account ID from JWT

  // Account info
  email    String? // Account email/phone
  isActive Boolean @default(true)

  // Usage tracking
  lastUsedAt   DateTime?
  requestCount Int       @default(0)

  // Error tracking
  errorCount        Int       @default(0) // Total errors
  consecutiveErrors Int       @default(0) // Resets on success
  lastErrorAt       DateTime?
  lastErrorMessage  String?   @db.Text
  lastErrorCode     Int?                  // HTTP status code

  // Health status: "active" | "degraded" | "failed"
  // - active: normal operation
  // - degraded: 5+ consecutive errors, deprioritized
  // - failed: 10+ consecutive errors, retried automatically after cooldown
  status          String    @default("active")
  statusReason    String?
  statusChangedAt DateTime?

  // Success metrics
  successCount  Int       @default(0)
  lastSuccessAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  usageLogs UsageLog[]

  @@unique([userId, provider, email])
  @@index([userId])
  @@index([userId, provider, isActive])
  @@index([userId, provider, isActive, status])
}

// Disabled Model - user-specific model toggle state
model DisabledModel {
  id     String @id @default(cuid())
  userId String
  model  String

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, model])
  @@index([userId])
}

// Proxy API Key - generated keys for accessing the proxy
model ProxyApiKey {
  id     String @id @default(cuid())
  userId String

  keyHash      String  @unique // SHA-256 hash for lookup
  keyPreview   String  // First 8 chars for display: "sk-xxxxx..."
  encryptedKey String? @db.Text // AES encrypted full key (for reveal)
  name         String? // e.g., "MacBook Pro", "Work PC" (optional)

  modelAccessMode String   @default("all") // "all" | "whitelist" | "blacklist"
  modelAccessList String[] @default([])

  isActive   Boolean   @default(true)
  expiresAt  DateTime? // null = never expires
  lastUsedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  usageLogs UsageLog[]

  @@index([keyHash])
  @@index([userId])
}

// Usage Log - tracks API usage
model UsageLog {
  id                String  @id @default(cuid())
  userId            String
  providerAccountId String?
  proxyApiKeyId     String?

  model        String
  inputTokens  Int @default(0)
  outputTokens Int @default(0)

  // Request metadata
  statusCode Int?
  duration   Int? // milliseconds

  createdAt DateTime @default(now())

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  providerAccount ProviderAccount? @relation(fields: [providerAccountId], references: [id], onDelete: SetNull)
  proxyApiKey     ProxyApiKey?     @relation(fields: [proxyApiKeyId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([providerAccountId])
  @@index([createdAt])
}
